---
import ScrollReveal from "./ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
import stream from "../assets/stream.mp4";
import HeroText from "./HeroText";
---

<section class="max-w-6xl mx-auto px-4 pt-10 md:pt-18 text-center">
  <ScrollReveal client:load>
    <div
      class="py-20 md:py-46 p-6 bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow"
    >
      <!-- Background video -->
      <video
        class="absolute inset-0 h-full w-full object-cover rounded-lg border border-gray-200"
        autoplay
        muted
        loop
        playsinline
      >
        <source src={stream} type="video/mp4" />
      </video>
      <!-- Overlay (for contrast) -->
      <div class="absolute inset-0 bg-black/50 rounded-lg"></div>
      <ScrollReveal client:load delay={0.2}>
        <HeroText client:load />
      </ScrollReveal>
      <ScrollReveal client:load delay={0.4}>
        <p
          class="text-xl md:text-2xl text-gray-200 mb-8 max-w-2xl mx-auto text-shadow-sm"
        >
          Jedziemy na rowerach, transmitujemy na żywo, razem z widzami zbieramy
          środki na realną pomoc.
        </p>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.6}>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://www.youtube.com/watch?v=6P9pNMzU43E"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex justify-center items-center gap-2 px-8 py-3 bg-rzs text-white rounded-lg hover:bg-rzs-hover transition-colors font-medium"
          >
            <Icon name="tabler:calendar-plus" class="w-5 h-5" />
            Dodaj do kalendarza
          </a>
          <a
            href="/info"
            class="inline-block px-8 py-3 bg-white text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors font-medium"
          >
            Informacje
          </a>
        </div>
      </ScrollReveal>
    </div>
  </ScrollReveal>
</section>
