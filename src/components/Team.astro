---
import ScrollReveal from "./ScrollReveal.tsx";
import { Image } from "astro:assets";

import Mariusz from "../assets/people/mari.jpg";
import Mati from "../assets/people/mati.jpg";
import Michu from "../assets/people/michu.jpg";
import Ola from "../assets/people/ola.jpg";

const participants = [
  {
    name: "Mateusz Duda",
    description:
      "Mózg całej akcji i człowiek wielu talentów, który trzyma wszystko w ryzach ze stoickim spokojem. Kreatywny, empatyczny i uważny na ludzi wokół. Miłośnik dobrej kawy. Fan tostów z serem. Z dystansem do świata i regeneracji - bo spanie traktuje jak strategiczny element działania, a nie słabość.",
    image: Mati,
  },
  {
    name: "Mariusz Grabski",
    description:
      "Chodząca pozytywna energia i lekki chaos w najlepszym wydaniu. Zawsze wysłucha, zawsze wesprze, czasem rzuci żartem. Pomoże jeśli tylko będzie trzeba. Interesuje się żywieniem i lubi robić zdrowe żarło, ciesząc się chwilą zamiast liczyć wszystko co do grama.",
    image: Mariusz,
  },
  {
    name: "Michał Wrona",
    description:
      "Techniczny ogarniacz na dwóch kółkach i nasza złota rączka. Człowiek tryskający energią i spokojem, który stawia na niekonwencjonalne rozwiązania i praktyczne podejście do problemów. Gdy pojawia się wyzwanie, on po prostu je rozwiązuje - spokojnie, skutecznie i po swojemu.",
    image: Michu,
  },
  {
    name: "Aleksandra Lipiec",
    description:
      "Ola to serce naszego zaplecza kreatywnego. Zawsze uśmiechnięta, szczera i pomocna, to ona spina social media, scenariusze i cały organizacyjny chaos w jedną, działającą całość. Prywatnie jest młośniczką podróży oraz kocha wszystkie zwierzaki.",
    image: Ola,
  },
];
---

<section id="features" class="max-w-6xl mx-auto pt-12 p-4">
  <ScrollReveal client:load delay={0.2}>
    <h1 class="text-4xl font-bold text-gray-900 my-4 text-center">
      Poznaj nową ekipę
    </h1>
  </ScrollReveal>

  <ScrollReveal client:load delay={0.3}>
    <hr class="h-px mt-0 bg-gray-200 border-0 mb-6" />
  </ScrollReveal>

  <ScrollReveal client:load delay={0.4}>
    <div class="flex justify-center">
      <div class="gap-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        {
          participants.map((participant, i) => {
            const isLast = i === participants.length - 1;
            return (
              <div
                class={`flex justify-center col-span-1 ${isLast ? "lg:col-span-3" : ""}`}
              >
                <ScrollReveal client:load delay={0.2 + i * 0.2} scale={true}>
                  <div class="p-6 max-w-90">
                    <Image
                      alt={`Zdjęcie ${participant.name}`}
                      src={participant.image}
                      class="w-32 h-40 object-cover rounded-lg mb-4 border border-gray-200"
                    />
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                      {participant.name}
                    </h3>
                    <p class="text-gray-600">{participant.description}</p>
                  </div>
                </ScrollReveal>
              </div>
            );
          })
        }
      </div>
    </div>
  </ScrollReveal>
</section>
